{
  "compilerOptions": {
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es2016", "dom"],
    "module": "commonjs",
    "target": "es6",
    "baseUrl": "",
    "types": ["jest", "node"],
    "strict": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "forceConsistentCasingInFileNames": true,
    "pretty": true
  },
  "include": ["**/*.spec.ts"]
}
